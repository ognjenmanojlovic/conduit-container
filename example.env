# Frontend Configuration
FRONTEND_PORT=8282

# Backend Configuration
BACKEND_PORT=8000

# Django DB connection
DJANGO_DB_PATH=/data/db.sqlite3

# Django Superuser
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=adminpass

# Django allowed hosts (comma-separated)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,YOUR_SERVER_IP_HERE

# Django secret key (must be overridden in real .env!)
DJANGO_SECRET_KEY=change-me-in-production-please-123456

# CORS origin whitelist (comma-separated)
DJANGO_CORS_ORIGIN_WHITELIST=0.0.0.0:4000,localhost:4000